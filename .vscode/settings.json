{
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "files.associations": {
    ".eslintrc": "json",
    "jsconfig.json": "json"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.wordWrap": "off",

  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "cSpell.words": [    
    "TINYMCE"
  ],
  "cSpell.ignorePaths": ["package.json", "package-lock.json", ".vscode", ".env*", ".eslintrc"],

  "optimizeImages.app": "C:\\VSCODE\\IOptimizer\\IOptimizer.exe",
  "optimizeImages.appOptions": ["[filepath]", "-l"],
  "optimizeImages.imageRegex": ".*\\.(png|gif|jpe?g)$",
  "optimizeImages.searchDepth": 10, // Maximum depth to look at when searching images
  "optimizeImages.searchStartingPath": ".", // Path relative to the root where to start searching images
  "optimizeImages.searchIgnoreFolders": [".git"]
}
